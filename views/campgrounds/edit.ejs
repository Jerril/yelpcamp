<%-include('../partials/header')%>

<h1 class="text-center my-3">Edit <%=campground.name%></h1>

<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST" class="my-3 mx-auto" style="width:30%;">
    <div class="form-group">
        <input type="text" class= "form-control" name="name" placeholder="Name" value="<%=campground.name%>">
    </div>
    <div class="form-group">
        <input type="number" class= "form-control" name="price" placeholder="Price" min="0.01" step="0.01" value="<%=campground.price%>">
    </div>
    <div class="form-group">
        <input type="text" class= "form-control" name="image" placeholder="Image URL" value="<%=campground.image%>">
    </div>
    <div class="form-group">
        <textarea class="form-control" name="description" placeholder="Description" cols="30" rows="10"><%=campground.description%></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

    <a href="/campgrounds/<%=campground._id%>">&larr; Go Back</a>
</form>

<%-include('../partials/footer')%>