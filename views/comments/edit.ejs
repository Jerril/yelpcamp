<%-include('../partials/header')%>

<h1 class="text-center my-3">Edit Comment</h1>

<form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT" method="POST" class="my-3 mx-auto" style="width:30%;">
    <div class="form-group">
        <input type="text" class= "form-control" name="comment[text]" placeholder="Name" value="<%=comment.text%>">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

    <a href="/campgrounds/<%=campground._id%>">&larr; Go Back</a>
</form>

<%-include('../partials/footer')%>